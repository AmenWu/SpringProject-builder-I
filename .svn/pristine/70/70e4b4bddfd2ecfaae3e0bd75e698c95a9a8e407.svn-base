			});
		}
	    
		  //删除
		  function del(id){	
			  var permissionPid = $("#permissionPid").val();
			  parent.layer.confirm('您是确定要删除吗？', {
			      btn: ['确定','取消'], //按钮
			      shade: false 
			  }, function(){
				  $.ajax({
			      		url:"<%=basePath%>permission/del.im",
			      		type:"post",
			      		data:{id:id},
			      		dataType:"json",
			      		success:function(state){
			      			var status =  state.status;
